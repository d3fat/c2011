user_input = input("Enter a two-digit number: ")


if len(user_input) == 2 and user_input.isnumeric():
    number = int(user_input)


    tens_digit = number // 10
    ones_digit = number % 10


    print("Tens digit:", tens_digit)
    print("Ones digit:", ones_digit)




user_input = input("Enter a three-digit number: ")


if len(user_input) == 3 and user_input.isnumeric():
    number = int(user_input)


    hundreds_digit = number // 100
    tens_digit = (number // 10) % 10
    ones_digit = number % 10


    print("Hundreds digit:", hundreds_digit)
    print("Tens digit:", tens_digit)
    print("Ones digit:", ones_digit)



if len(user_input) == 2 and user_input.isnumeric():
    number = int(user_input)


    tens_digit = number // 10
    ones_digit = number % 10


    print("Tens digit:", tens_digit)
    print("Ones digit:", ones_digit)


    first_digit = input("Enter the first digit: ")
    second_digit = input("Enter the second digit: ")


    if len(first_digit) == 1 and len(second_digit) == 1 and first_digit.isnumeric() and second_digit.isnumeric():

        combined_number = int(first_digit + second_digit)
        print("Combined number:", combined_number)
    else:
        print("Invalid input. Please enter single digits.")

        first_digit = input("Enter the first digit: ")
        second_digit = input("Enter the second digit: ")


        if len(first_digit) == 1 and len(second_digit) == 1 and first_digit.isnumeric() and second_digit.isnumeric():

            combined_number = int(first_digit + second_digit)
            print("Combined number:", combined_number)
        else:
            print("Invalid input. Please enter single digits.")
